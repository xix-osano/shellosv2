#!/bin/bash

set -e

if [ "$EUID" -eq 0 ]; then
  echo "Error: This script should not be run as root"
  exit 1
fi

echo -e "This will reinstall all the default Shellos packages and reset all default configs.\nWarning: All changes to configs will be lost.\n"

if gum confirm "Are you sure you want to reinstall and lose all config changes?"; then
  echo "Resetting SHELLOS repository"
  git clone "https://github.com/xix-osano/shellos.git" ~/.local/share/shellos-new >/dev/null
  rm -rf $SHELLOS_PATH
  mv ~/.local/share/shellos-new $SHELLOS_PATH

  echo "Reinstalling missing Shellos packages"
  mapfile -t packages < <(grep -v '^#' "$SHELLOS_PATH/install/shellos-base.packages" | grep -v '^$')
  sudo pacman -Syu --noconfirm --needed "${packages[@]}"

  echo "Resetting all Shellos configs"
  cp -R ~/.local/share/shellos/config/* ~/.config/
  cp ~/.local/share/shellos/default/bashrc ~/.bashrc
  echo '[[ -f ~/.bashrc ]] && . ~/.bashrc' | tee ~/.bash_profile >/dev/null

  $(bash $SHELLOS_PATH/install/config/theme.sh)
  $(bash $SHELLOS_PATH/install/config/git.sh)

  shellos-refresh-limine
  shellos-refresh-plymouth
  shellos-nvim-setup
fi
